{
    "name": "electron-app",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "electron": "^12.0.5",
        "electron-builder": "^22.10.5"
    },
    "build": {
        "appId": "mobnet.app",
        "productName": "Mobnet App",
        "directories": {
            "output": "build"
        },
        "files": [
            "package.json", 
            "index.js",
            {
                "from": "svelte-build",
                "to": "",
                "filter": ["**/*"]
            }
        ],
        "extraResources": [
            {
                "from": "dotnet-build",
                "to": "api",
                "filter": ["**/*"]
            }
        ],
        "asar": false,
        "win": {
            "target": "nsis",
            "icon": "icon.png"
        }
    }
}
